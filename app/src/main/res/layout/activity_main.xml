<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".single_screen.single_activity.SingleActivity">


        <android.support.v4.view.ViewPager
            android:id="@+id/main_activity_view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v4.view.ViewPager>

        <ImageView
            android:id="@+id/floating_back_button"
            android:layout_width="40dp"
            android:layout_height="80dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/ic_floating_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/floating_forward_button"
            android:layout_width="40dp"
            android:layout_height="80dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/ic_floating_forward"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>